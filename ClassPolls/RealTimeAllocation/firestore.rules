rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /sessions/{sessionId}/allocations/{allocationId} {
      // Allow anyone to read for the dashboard (in a real app, you'd restrict this)
      allow read: if true;
      
      // Allow creation only if total is approximately 100 (handling floating point) and it has 5 values
      allow create: if 
        request.resource.data.total >= 99 && request.resource.data.total <= 101 &&
        request.resource.data.values.size() == 5;
    }
  }
}
